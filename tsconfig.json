{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "target": "ES2020",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "serverless.yml"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "build/**/**"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}